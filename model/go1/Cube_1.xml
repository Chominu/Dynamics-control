<mujoco model="go1_scene">
  <!-- 1) 로봇 본체 불러오기 -->
  <include file="go1.xml"/>

  <statistic center="1.0 0.7 1.0" extent="0.8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0.9 0.9 0.9"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-140" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="flat" rgb1="0 0 0" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <!-- <material name="WoodPlain" rgba="0.55 0.27 0.07 1" specular="0.1" shininess="20"/> -->
    <texture name="woodbase" type="2d" builtin="flat" rgb1="0.55 0.27 0.07" rgb2="0.50 0.23 0.06" width="512" height="512"/>
    <material name="WoodGradient" texture="woodbase" texuniform="true" reflectance="0.05" specular="0.15" shininess="10"/>

    <texture name="grayflat" type="2d" builtin="flat" rgb1="0.6 0.6 0.6" rgb2="0.4 0.4 0.4" width="512" height="3072"/>
    <material name="FloorGray" texture="grayflat" texuniform="true" reflectance="0.03" specular="0.1" shininess="5"/>
  </asset>

  <default>
      <default class="obstacle">
          <geom type="box" friction="0.8 0.8 0.8" priority="2"/>
      </default>
      <default class="slippery">
          <geom type="box" priority="2"/>
      </default>
  </default>

  <worldbody>
    <light pos="1 0 3.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="FloorGray"/>

    <!-- 벽 -->
    <geom name="Wall_0" class="obstacle" pos="3  3   1"   size="2.5 0.01 1" rgba="0.9 0.9 0.9 1"/>
    <geom name="Wall_1" class="obstacle" pos="5.5  0 1"   size="0.01 3.0 1" rgba="0.9 0.9 0.9 0.2"/>
    <geom name="Wall_2" class="obstacle" pos="3 -3   1"   size="2.5 0.01 1" rgba="0.9 0.9 0.9 1"/>
    <geom name="Wall_3" class="obstacle" pos="-2 0.5 1"   size="0.01 4 1"   rgba="0.9 0.9 0.9 1"/>

    <!-- 1단계 계단 x방향, 높이 5cm, 좌우폭 50cm, 전후 거리 10cm, 6단  -->
    <geom name="Stair_1_0" class="obstacle" pos="2.5 1.5 0.025" size="0.2 0.5 0.025" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_1_1" class="obstacle" pos="2.6 1.5 0.075" size="0.2 0.5 0.025" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_1_2" class="obstacle" pos="2.7 1.5 0.125" size="0.2 0.5 0.025" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_1_3" class="obstacle" pos="2.8 1.5 0.175" size="0.2 0.5 0.025" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_1_4" class="obstacle" pos="2.9 1.5 0.225" size="0.2 0.5 0.025" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_1_5" class="obstacle" pos="3.0 1.5 0.275" size="0.2 0.5 0.025" rgba="0.9 0.9 0.9 1"/> 
    <geom name="Stair_1_6" class="obstacle" pos="3.1 1.5 0.325" size="0.2 0.5 0.025" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_1_7" class="obstacle" pos="3.2 1.5 0.375" size="0.2 0.5 0.025" rgba="0.9 0.9 0.9 1"/> 
    
    <!-- 2단계 계단 x방향, 높이 10cm, 좌우폭 50cm, 전후 거리 20cm, 4단 -->
    <geom name="Stair_2_0" class="obstacle" pos="2.5 -0. 0.05" size="0.2 0.5 0.05" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_2_1" class="obstacle" pos="2.7 -0. 0.15" size="0.2 0.5 0.05" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_2_2" class="obstacle" pos="2.9 -0. 0.25" size="0.2 0.5 0.05" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_2_3" class="obstacle" pos="3.1 -0. 0.35" size="0.2 0.5 0.05" rgba="0.9 0.9 0.9 1"/>

    <!-- 3단계 계단 x방향, 높이 15cm, 좌우폭 50cm, 전후 거리 30cm, 4단 -->
    <geom name="Stair_3_0" class="obstacle" pos="2.5 -1.5 0.075" size="0.2 0.5 0.075" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_3_1" class="obstacle" pos="2.8 -1.5 0.225"  size="0.2 0.5 0.075" rgba="0.9 0.9 0.9 1"/>
    <geom name="Stair_3_2" class="obstacle" pos="3.1 -1.5 0.375"  size="0.2 0.5 0.075" rgba="0.9 0.9 0.9 1"/>
    <!-- <geom name="Stair_3_3" class="obstacle" pos="3.4 -1.5 0.525"  size="0.2 0.5 0.075" rgba="0.9 0.9 0.9 1"/> -->
    
    <!-- 나무 블럭 장애물 1 => 17개 -->
    <body pos="0.007 1.170 0.5">
      <joint type="free"/>
      <geom type="box" size="0.075 0.075 0.015"  material="WoodGradient" mass="0.5"/>
    </body>
    <!-- 나무 블럭 장애물 2 => 8개 -->
    <body pos="0.007 2.0 0.5">
      <joint type="free"/>
      <geom type="box" size="0.15 0.15 0.015"  material="WoodGradient" mass="1.0"/>
    </body>

    <!-- 나무 블럭 장애물 3 => 8개 -->
    <body pos="0.007 3.0 0.5">
      <joint type="free"/>
      <geom type="box" size="0.15 0.3 0.01"  material="WoodGradient" mass="1.5"/>
    </body>




    <body name="support" pos="0 5 0">
      <!-- 원통 중심을 z=0.1에 두면 높이 0.2로 위쪽 0.1 아래쪽 0.1 -->
      <geom name="support_cylinder" type="cylinder" size="0.025 0.1" pos="0 0 0.05" quat="0.7071 0.7071 0 0"  rgba="0.6 0.6 0.6 1"/>

      <!-- 시소 축: 원통 바로 위, 같은 축선상 -->
      <body name="seesaw_root" pos="0 0 0.1">
        <joint name="pivot" type="hinge" axis="0 1 0" damping="1"/>

        <!-- 정사각판자: 0.6x0.6, 두께 0.02 -->
        <body name="plank" pos="0 0 0">
          <geom name="plank_geom" type="box" size="0.6 0.6 0.015" material="WoodGradient" mass="5"/>
        </body>
      </body>
    </body>

  </worldbody>
</mujoco>
